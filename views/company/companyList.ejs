<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>企业信息库</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%- include ../publicPages/css_content.ejs%>
    <link rel='stylesheet' href='/stylesheets/company/companyList.css' >
</head>
<body>
<!--头部区域-->
<%- include ../publicPages/header.ejs %>
<!--主体区域-->
<div id="main-body">
    <!--导航栏-->
    <%- include ../publicPages/nav.ejs %>
    <!--文本区域-->
    <div id="content-wrapper">
        <div class="breadcrumb-wrapper">
            <span class="layui-breadcrumb"><a href="javascript:void(0)"><cite>易格管理端</cite></a><a href="javascript:void(0)"><cite>企业信息库</cite></a></span>
        </div>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>筛选条件</legend>
        </fieldset>
        <!--筛选条件-->
        <form id="companyFilter" class="filter-wrapper layui-form">
            <div class="layui-form-item">
                <label class="layui-form-label">企业名称</label>
                <div class="layui-input-block">
                    <input name="companyName" type="text" autocomplete="off" placeholder="请输入企业名称" class="layui-input"/>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">公司地点</label>
                <div class="layui-input-inline">
                    <select name="provinceId" lay-filter="province">
                        <option value="">请选</option>
                    </select>
                </div>
                <div class="layui-input-inline">
                    <select name="cityId" lay-filter="city">
                        <option value="">请选择市</option>
                    </select>
                </div>
                <div class="layui-input-inline">
                    <select name="countryId">
                        <option value="">请选择县/区</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">创建日期</label>
                <div class="layui-input-inline">
                    <input type="text" name="startTime" id="date" placeholder="yyyy-mm-dd" autocomplete="off" class="layui-input" onclick="layui.laydate({elem: this})">
                </div>
                <div class="layui-form-mid">-</div>
                <div class="layui-input-inline">
                    <input type="text" name="endTime" id="date" placeholder="yyyy-mm-dd" autocomplete="off" class="layui-input" onclick="layui.laydate({elem: this})">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">融资阶段</label>
                <div class="layui-input-inline">
                    <select  name="financingStage">
                        <option value="">不限</option>
                        <%for(var i=0;i<financingStageList.length;i++){%>
                        <option value="<%=financingStageList[i].id%>"><%=financingStageList[i].name%></option>
                        <%}%>
                    </select>
                </div>
                <label class="layui-form-label">行业领域</label>
                <div class="layui-input-inline">
                    <select name="industryField">
                        <option value="">不限</option>
                        <%for(var i=0;i<industryFieldList.length;i++){%>
                        <option value="<%=industryFieldList[i].id%>"><%=industryFieldList[i].name%></option>
                        <%}%>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button type="button" lay-submit lay-filter="search" class="layui-btn" >搜索</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </form>
        <!--企业列表-->
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>企业列表</legend>
        </fieldset>
        <div class="companyTable-wrapper">
            <table id="companyList" class="layui-table" lay-even="" lay-skin="row">
                <colgroup>
                    <col width="60">
                </colgroup>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>企业名称</th>
                    <th>公司地点</th>
                    <th>创建时间</th>
                    <th>行业领域</th>
                    <th>融资阶段</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="page-wrapper"></div>
    </div>
</div>
</body>
<!--JS-->
<%- include ../publicPages/script_content.ejs %>
<script src="/javascripts/company/companyList.js"></script>
</html>
