<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>职位信息库</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%- include ../publicPages/css_content.ejs%>
    <link rel='stylesheet' href='/stylesheets/job/jobList.css' >
</head>
<body>
<!--头部区域-->
<%- include ../publicPages/header.ejs %>
<!--主体区域-->
<div id="main-body">
    <!--导航栏-->
    <%- include ../publicPages/nav.ejs %>
    <!--文本区域-->
    <div id="content-wrapper">
        <div class="breadcrumb-wrapper">
            <span class="layui-breadcrumb"><a href="javascript:void(0);"><cite>档案信息库</cite></a><a href="javascript:void(0);"><cite>职位信息库</cite></a></span>
        </div>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>筛选条件</legend>
        </fieldset>
        <!--筛选条件-->
            <form id="jobFilter" class="filter-wrapper layui-form">
                <input type="hidden" name="pageNo" value="1"/>
                <div class="layui-form-item">
                    <label class="layui-form-label">职位名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="jobName" autocomplete="off" placeholder="请输入职位名称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">工作地点</label>
                    <div class="layui-input-inline">
                        <select name="provinceId" lay-filter="province">
                            <option value="">请选</option>
                        </select>
                    </div>
                    <div class="layui-input-inline">
                        <select name="cityId" lay-filter="city">
                            <option value="">请选择市</option>
                        </select>
                    </div>
                    <div class="layui-input-inline">
                        <select name="countryId">
                            <option value="">请选择县/区</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">工作经验</label>
                    <div class="layui-input-inline">
                        <select name="experience">
                            <option value="">不限</option>
                            <%for(var i=0;i<workExperienceList.length;i++){%>
                            <option value="<%=workExperienceList[i].id%>"><%=workExperienceList[i].name%></option>
                            <%}%>
                        </select>
                    </div>
                    <label class="layui-form-label">学历要求</label>
                    <div class="layui-input-inline">
                        <select name="education">
                            <option value="">不限</option>
                            <%for(var i=0;i<educationList.length;i++){%>
                            <option value="<%=educationList[i].id%>"><%=educationList[i].name%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">创建日期</label>
                    <div class="layui-input-inline">
                        <input type="text" name="startTime" id="date" placeholder="yyyy-mm-dd" autocomplete="off" class="layui-input" onclick="layui.laydate({elem: this})">
                    </div>
                    <div class="layui-form-mid">-</div>
                    <div class="layui-input-inline">
                        <input type="text" name="endTime" id="date"  placeholder="yyyy-mm-dd" autocomplete="off" class="layui-input" onclick="layui.laydate({elem: this})">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">月薪</label>
                    <div class="layui-input-inline">
                        <select name="salary">
                            <option value="">不限</option>
                            <%for(var i=0;i<salaryLevelList.length;i++){%>
                            <option value="<%=salaryLevelList[i].id%>"><%=salaryLevelList[i].name%></option>
                            <%}%>
                        </select>
                    </div>
                    <label class="layui-form-label">工作性质</label>
                    <div class="layui-input-inline">
                        <select name="jobNature">
                            <option value="">不限</option>
                            <%for(var i=0;i<jobNatureList.length;i++){%>
                            <option value="<%=jobNatureList[i].id%>"><%=jobNatureList[i].name%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button type="button" id="search" class="layui-btn">搜索</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </form>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>职位列表</legend>
        </fieldset>
        <div class="jobTable-wrapper">
            <table id="jobList" class="layui-table" lay-even="" lay-skin="row">
                <colgroup>
                    <col width="60">
                </colgroup>
                <thead>
                <tr>
                    <th>编号</th>
                    <th>职位</th>
                    <th>工作地点</th>
                    <th>发布时间</th>
                    <th>薪资</th>
                    <th>工作经验</th>
                    <th>学历要求</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="page-wrapper"></div>
    </div>
</div>
</body>
<!--JS-->
<%- include ../publicPages/script_content.ejs %>
<script src="/javascripts/job/jobList.js"></script>
</html>
